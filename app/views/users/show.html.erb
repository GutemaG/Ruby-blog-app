<div class="">
  <div class="p-3">
    <button class="btn btn-primary p-2">
      <%= link_to "New Post", new_user_post_path(@user), class: "text-white" %>
    </button>
  </div>
  <div class="row">
    <div class="col-12">
      <%= render "shared/user_header", user: @user%>
    </div>
    <div class="col-12">
      <div class="bio rounded border border-dark p-2">
        <h4>Bio</h4>
        <p> <%= @user.bio%> </p>
      </div>
    </div>
    <div class="col-12">
      <div class="border p-3 mt-1">
        <% @user.recent_three_posts.each do |post| %>
          <%= render "shared/post_comment", post: post, user: @user %>
        <% end %>
      </div>
    </div>
    <%= link_to "See All Post", user_posts_path(@user), class:"btn btn-secondary w-50 mt-2 mx-auto" %>
  </div>
</div>
